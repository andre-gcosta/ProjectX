{
  "version": 2,
  "builds": [
    {
      "src": "backend/src/main.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["backend/prisma/schema.prisma"]
      }
    },
    {
      "src": "frontend/dist/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/src/main.ts" },
    { "src": "/(.*)", "dest": "frontend/dist/$1" }
  ]
}
