{
  "version": 2,
  "builds": [
    {
      "src": "backend/dist/main.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/dist/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/dist/main.js" },
    { "src": "/(.*)", "dest": "frontend/dist/$1" },
    { "src": "/.*", "dest": "frontend/dist/index.html" }
  ]
}
